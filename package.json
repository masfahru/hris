		"fast-jwt": "^3.3.0",
		"postgres": "^3.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "1.2.2",
		"bun-types": "latest",
		"knex": "^2.5.1",
		"pg": "^8.11.3",
		"pg-hstore": "^2.3.4",
		"typescript": "^5.2.2"
	},
	"module": "src/index.js"
